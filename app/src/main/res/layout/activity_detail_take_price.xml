<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_map"
    tools:context=".Detail_take_leftActivity" >



    <LinearLayout
        android:id="@+id/image_logo_top_map"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/top_map_color"
        android:orientation="vertical"
        android:layout_height="250dp">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/image_top_list"/>


    </LinearLayout>




    <LinearLayout
        android:id="@+id/detail_description"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:layout_height="350dp">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/liftType"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"/>



                <TextView
                    android:id="@+id/motortype"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"/>



                <TextView
                    android:id="@+id/instalLocation"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"/>





                <TextView
                    android:id="@+id/text"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />






                <TextView
                    android:id="@+id/motor1"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />



                <TextView
                    android:id="@+id/motor2"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />





                <TextView
                    android:id="@+id/motor3"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />




                <TextView
                    android:id="@+id/description1"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />




                <TextView
                    android:id="@+id/description2"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />




                <TextView
                    android:id="@+id/description3"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />









                <TextView
                    android:id="@+id/description4"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />






                <TextView
                    android:id="@+id/description5"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />






                <TextView
                    android:id="@+id/description6"
                    android:background="@color/color1"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />




            </LinearLayout>
        </ScrollView>




    </LinearLayout>

</RelativeLayout>
