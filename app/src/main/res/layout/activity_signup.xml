<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#001F3B"
      >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#001F3B"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#001F3B"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:background="@drawable/bak2"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/jalil3" />

                    <TextView
                        android:id="@+id/textViewsin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Sing up"
                        android:textColor="#FFffff"
                        android:textSize="20sp" />





                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#1C3C58"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#E6E6E6"
                    android:gravity="center"
                    android:orientation="horizontal">



                        <EditText
                            android:id="@+id/editText2"
                            android:layout_width="240dp"
                            android:layout_height="40dp"
                            android:background="#E6E6E6"
                            android:layout_gravity="center"
                            android:hint="نام کاربری"
                            android:inputType="textPersonName"
                            android:textColor="#004964"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="14sp"
                            android:gravity="center"/>





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#1C3C58"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#001F3B"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#1C3C58"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                   android:gravity="center"

                    android:background="#E6E6E6"
                    android:orientation="horizontal">



                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:background="#E6E6E6"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="رمز عبور"
                        android:inputType="textPassword"
                        android:textColor="#004964"
                        android:layout_gravity="center"
                        android:textColorLink="@color/colorPrimary"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#1C3C58"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#001F3B"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#1C3C58"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"

                    android:background="#E6E6E6"
                    android:orientation="horizontal">




                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:background="#E6E6E6"
                        android:ems="10"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:hint=" شماره همراه"
                        android:inputType="phone"
                        android:textColor="#004964"
                        android:textColorLink="@color/colorPrimary"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#1C3C58"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#001F3B"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#1C3C58"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"

                    android:background="#E6E6E6"
                    android:orientation="horizontal">



                    <EditText
                        android:id="@+id/editText6"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:background="#E6E6E6"
                        android:ems="10"
                        android:gravity="center"
                      android:layout_gravity="center"
                        android:hint="کد ملی"
                        android:inputType="number"
                        android:textColor="#004964"
                        android:textColorLink="@color/colorPrimary"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#1C3C58"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#001F3B"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/llll" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"


                >


            </LinearLayout>

            <Button
                android:id="@+id/button2"

                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:text="save"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>